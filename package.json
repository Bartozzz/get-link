{
  "name": "get-link",
  "version": "1.0.4",
  "keywords": [
    "url",
    "link",
    "path",
    "utility",
    "helper",
    "relative-path",
    "absolute-url"
  ],
  "description": "Returns a new, absolute URL by parsing the link relative to the base URL. Supports dynamic links. Not vulnerable to Denial-of-Service attacks.",
  "author": "≈Åaniewski Bartosz <bartosz@laniewski.me> (https://laniewski.me/)",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bartozzz/get-link.git"
  },
  "bugs": {
    "url": "https://github.com/Bartozzz/get-link/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-flow": "^7.9.0",
    "@babel/register": "7.9.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-preset-minify": "^0.5.1",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "flow-bin": "^0.124.0",
    "mocha": "^7.1.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "prepare": "npm run clean && npm run lint && npm run flow && npm run build",
    "build": "npx babel src -d dist",
    "watch": "npx babel src -d dist -w",
    "clean": "npx rimraf dist",
    "lint": "npx eslint --fix src",
    "test": "npm run prepare && npx mocha --require @babel/register",
    "flow": "npx flow"
  }
}
